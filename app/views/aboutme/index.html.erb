      <div name="self-portrait-image" class="h-72 w-auto flex flex-col">
        <%= image_tag("me.JPG", :alt => "self-portrait", class: "max-h-full max-w-full") %>
      </div>
      <div name="Introduction message" class="h-fit text-center">
        <p class="text-5xl pb-5">
          I AM ZANAHORIA
