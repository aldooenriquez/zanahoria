      </div>
      <div data-controller="scroll-to">
        <%= link_to icon('fa-solid', 'angle-down', class:'fa-2xl'), '#projects', data: { action: "click->scroll-to#scrollToSection" } %>
      </div>
    </div>
  </div>
  <div id="last-blog" data-target="scroll-to.section" class="h-fit w-full flex flex-row">
    <p class="w-1/2 text-5xl"> Blog mas reciente </p>
    <div class="w-1/2 h-96 flex flex-col justify-center items-center">
      <% if @last_blog.present?  %>
        <p class="w-fit h-fit text-3xl"><%= @last_blog.title %></p>
      <% else  %>
        <p class="w-fit h-fit text-5xl"> [Aun no hay blogs publicados] </p>
      <% end %>
    </div>
  </div>
  <div id="projects" data-target="scroll-to.section" class="h-fit w-full flex flex-col">
    <p class="text-5xl"> Proyectos </p>
    <div class=" h-96 flex flex-col justify-center items-center">
      <p class="w-fit h-fit text-5xl"> [Aqui deberian ir proyectos cool en los que este trabajando]</p>
    </div>
  </div>
  <hr class="mb-5 border border-black">
    <div name="navbar" class="w-full h-fit flex flex-row items-end justify-evenly text-xl">
      <%= link_to "BLOG", blog_posts_path, class: "hover:text-orange-400" %>
      <%= link_to "SIPS&BITS", root_path, class: "hover:text-orange-400" %>
      <%= link_to "GALERIA", root_path, class: "hover:text-orange-400" %>
      <%= link_to "SOBRE MI", aboutme_path, class: "hover:text-orange-400" %>
      <div class="flex flex-row gap-2">
        <%= link_to icon('fa-brands', 'square-github', class:'fa-2xl'), "https://github.com/iamzanahorio", :target => "_blank" %>
        <%= link_to icon('fa-brands', 'square-twitter', class:'fa-2xl'), "https://twitter.com/iamzanahorio", :target => "_blank" %>
        <%= link_to icon('fa-brands', 'square-instagram', class:'fa-2xl'), "https://www.instagram.com/iamzanahorio/", :target => "_blank" %>
      </div>
    </div>
