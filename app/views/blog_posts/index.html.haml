- if @blog_posts.empty?
  %h2 Hello world
- else
  - @blog_posts.each do |blog_post|
    .post-preview{"id": "post-preview-#{blog_post.id}"}
      = link_to blog_post_path(blog_post) do
        %h2.post-title
          = blog_post.title

        %h3.post-subtitle
          = blog_post.subtitle
    %p.post-meta
      Posted by
      = link_to blog_post.publisher, blog_post.publisher_url.presence || '#', id: 'blog-post-publisher'
      = "On #{DatetimeFormatter.format(blog_post.published_at)}"
